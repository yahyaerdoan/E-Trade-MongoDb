@model List<ResultProductWithCategoryDto>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Layout/Index.cshtml";
}

@{
    var cartQuantities = ViewBag.CartQuantities as Dictionary<string, int>;
}
<div class="container-fluid mt-1">
    <div class="row">
        @foreach (var item in Model)
        {
            var isInCart = cartQuantities != null && cartQuantities.ContainsKey(item.Id) && cartQuantities[item.Id] > 0;
            var cartQuantity = isInCart ? cartQuantities[item.Id] : 0;
            <div class="col-md-3 mb-2">
                <div class="card h-100 d-flex flex-column">
                    <div class="row g-0 flex-grow-1">
                        <div class="col-md-4 p-3">
                            <div id="carouselExampleIndicators@item.Id" class="carousel slide" data-bs-ride="carousel">
                                <div class="carousel-indicators">
                                    <button type="button" data-bs-target="#carouselExampleIndicators@item.Id" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators@item.Id" data-bs-slide-to="1" aria-label="Slide 2"></button>
                                    <button type="button" data-bs-target="#carouselExampleIndicators@item.Id" data-bs-slide-to="2" aria-label="Slide 3"></button>
                                </div>
                                <div class="carousel-inner">
                                    <div class="carousel-item active">
                                        <img src="https://m.media-amazon.com/images/I/8143FLAy6GL._SX679_.jpg" class="d-block w-100 img-fluid rounded-start mt-4" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://m.media-amazon.com/images/I/41BILLhhM6L.jpg" class="d-block w-100 img-fluid rounded-start mt-4" alt="...">
                                    </div>
                                    <div class="carousel-item">
                                        <img src="https://m.media-amazon.com/images/I/31H5Ly2XotL.jpg" class="d-block w-100 img-fluid rounded-start mt-4" alt="...">
                                    </div>
                                </div>
                                <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleIndicators@item.Id" data-bs-slide="prev">
                                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Previous</span>
                                </button>
                                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleIndicators@item.Id" data-bs-slide="next">
                                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                    <span class="visually-hidden">Next</span>
                                </button>
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="card-body flex-grow-1">
                                <div>
                                    <h5 class="card-title">@item.Name</h5>
                                    <p class="card-text"><strong>Price:</strong> @item.Price.ToString("C2")</p>
                                    <p class="card-text"><strong>Category:</strong> @item.CategoryName</p>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div style="background-color:white; padding: 10px;">
                        <div class="d-flex align-items-center" role="group" aria-label="Basic mixed styles example">
                            @if (isInCart)
                            {
                                <div class="d-flex align-items-center">
                                    <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <input type="hidden" name="change" value="-1" />
                                        <button type="submit" class="btn btn-sm btn-outline-danger" style="border-top-right-radius: 0; border-bottom-right-radius: 0; height: 38px;" @(cartQuantity <= 1 ? "disabled" : "")>-</button>
                                    </form>
                                    <input type="number" class="form-control form-control-sm" value="@cartQuantity" min="1" step="1" readonly style="width: 60px; text-align: center; border-radius: 0; height: 38px;" />
                                    <form asp-action="UpdateQuantity" method="post" style="display:inline;">
                                        <input type="hidden" name="productId" value="@item.Id" />
                                        <input type="hidden" name="change" value="1" />
                                        <button type="submit" class="btn btn-sm btn-outline-success" style="border-top-left-radius: 0; border-bottom-left-radius: 0; height: 38px;">+</button>
                                    </form>
                                </div>
                            }
                            else
                            {
                                <div class="d-flex align-items-center">
                                    <form asp-controller="Cart" asp-action="AddToCart" method="post" style="display: inline;">
                                        <input type="hidden" name="ProductId" value="@item.Id" /> <!-- Hidden field for product Id -->
                                        <input type="hidden" name="quantity" value="1" /> <!-- Default quantity -->
                                        <button type="submit" class="btn btn-outline-success" style="margin-right: 5px; height: 38px;">Add to Cart</button>
                                    </form>
                                </div>
                            }
                            <a href="/Home/Index/@item.Id" class="btn btn-outline-primary" style="margin-left: 5px; height: 38px;">Add to Favorite</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>