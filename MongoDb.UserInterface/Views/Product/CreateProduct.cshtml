@model CreateProductDto
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />


<form method="post">
    <div class="container">
        <br />
        <div class="alert alert-primary">
            <h4>Create Product</h4>
        </div>
        <br />
        <label> Name</label>
        <input type="text" asp-for="Name" class="form-control" />
        <br />
        <label>Description</label>
        <input type="text" asp-for="Description" class="form-control" />
        <br />
        <label>Price</label>
        <input type="text" asp-for="Price" class="form-control" />
        <br />
        <label>Stock</label>
        <input type="text" asp-for="StockQuantity" class="form-control" />
        <br />
        <label class="text-danger">Category Name</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="" selected disabled style="color: red;">Select a Category</option>

            @foreach (var category in ViewBag.Categories)
            {
                <option value="@category.Id">@category.Name</option>
            }
        </select>
        <br />
        <label>Image Url</label>
        <input type="text" asp-for="ImageIds" class="form-control" />
        <br />
        <button class="btn btn-primary">Create new Product</button>
    </div>
</form>
