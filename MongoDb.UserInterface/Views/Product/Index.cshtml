@model List<ResultProductDto>
@{
    Layout = null;
}

<link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
<!DOCTYPE html>
<div class="container">
    <br />
    <div class="alert alert-primary">
        <h4>Product List</h4>
    </div>
    <br />
    <table class="table table-hover">
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>Price</th>
            <th>Stock</th>
            <th>Image Url</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.ProductId</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td><span>$</span>@item.Price</td>
                <td>@item.Stock</td>
                <td>@item.ImageUrl</td>
                <td> <a href="/Product/DeleteProduct/@item.ProductId" class="btn  btn-danger">Delete</a></td>
                <td> <a href="/Product/UpdateProduct/@item.ProductId" class="btn  btn-success">Update</a></td>
            </tr>
        }
    </table>
    <a href="/Product/CreateProduct" class="btn  btn-success">New Product</a>
</div>
