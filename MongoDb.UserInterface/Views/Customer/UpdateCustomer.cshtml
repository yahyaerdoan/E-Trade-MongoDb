@model GetByIdCustomerDto
@{
    ViewData["Title"] = "UpdateCustomer";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="container-fluid">
    <div class="alert alert-primary">
        <h6>Update Customer</h6>
    </div>
    <div class="row">
        <div class="col-md-6">
            <form method="post" asp-action="UpdateCustomer">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label fw-bold"></label>
                    <input type="hidden" asp-for="Id" class="form-control" />

                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label fw-bold"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email" class="control-label fw-bold"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Address" class="control-label fw-bold"></label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>
                <div class="form-group" style="margin-top:1rem">
                    <input type="submit" value="Update" class="btn btn-outline-primary col-12" />
                </div>
            </form>
        </div>
    </div>
</div>